FROM php:5.6-cli

COPY docker/install-php-extensions /usr/local/bin/

# Install all extensions listed by docker-php-ext-install (listed with `docker run -ti --rm php:5.6-cli docker-php-ext-install`), except:
#   Already installed extensions:
#     ctype
#     curl
#     dom
#     fileinfo
#     filter
#     ftp
#     hash
#     iconv
#     json
#     mbstring
#     pdo
#     pdo_sqlite
#     phar
#     posix
#     readline
#     reflection
#     session
#     simplexml
#     spl
#     standard
#     tokenizer
#     xml
#     xmlreader
#     xmlwriter
#  Depending on Oracle Instant Client, which requires an Oracle account:
#     oci8
#     pdo_oci
#  Conflicting with other extensions:
#     sybase_ct [implemented in 5.6a]
RUN install-php-extensions \
#		Core extensions
		bcmath \
		bz2 \
		calendar \
		dba \
		enchant \
		exif \
		gd \
		gettext \
		gmp \
		imap \
		interbase \
		intl \
		ldap \
		mcrypt \
		mssql \
		mysql \
		mysqli \
		odbc \
		opcache \
		pcntl \
		pdo_dblib \
		pdo_firebird \
		pdo_mysql \
		pdo_odbc \
		pdo_pgsql \
		pgsql \
		pspell \
		recode \
		shmop \
		snmp \
		soap \
		sockets \
		sysvmsg \
		sysvsem \
		sysvshm \
		tidy \
		wddx \
		xmlrpc \
		xsl \
		zip \
#		PECL extensions
		xdebug \
		imagick \
		memcache \
		memcached \
		redis \
		solr \
		ssh2 \
		timezonedb \
		uuid \
		yaml \
	&& true
